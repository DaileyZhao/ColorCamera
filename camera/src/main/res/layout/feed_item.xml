<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/feed_img"
        android:layout_width="103.5dp"
        android:layout_height="68.8dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="16dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/feed_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/feed_img"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="13dp"
        android:layout_toLeftOf="@id/feed_img"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lineSpacingExtra="4dp"
        android:maxLines="2"
        android:textColor="#FF333333"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignLeft="@id/feed_title"
        android:layout_alignRight="@id/feed_title"
        android:layout_alignBottom="@id/feed_img"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@id/feed_img">
        <TextView
            android:id="@+id/feed_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxWidth="100dp"
            android:singleLine="true"
            android:textColor="#FF999999"
            android:textSize="12sp"
            tools:text="下载类广告下载类广告下载类广" />
        <TextView
            android:id="@+id/feed_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:maxWidth="100dp"
            android:singleLine="true"
            android:textColor="#FF999999"
            android:textSize="12sp"
            tools:text="2019-03-19 15:55" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/feed_img"
        android:layout_marginTop="15dp"
        android:background="#efefef" />
</RelativeLayout>